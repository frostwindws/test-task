<Window x:Class="ArticlesClient.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ArticlesClient"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="150"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <StackPanel Grid.RowSpan="3" Name="ArticlesPanel" >
            
        </StackPanel>
        <TextBlock Grid.Column="1" Grid.Row="0" Name="ArticleTitleBlock" />
        <TextBlock Grid.Column="1" Grid.Row="1" Name="ArticleContentBlock" />
        <StackPanel Grid.Column="1" Grid.Row="2" Name="CommentsPanel" />
    </Grid>
</Window>
